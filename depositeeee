function copyUPIID() {
    const upiField = document.getElementById("upi_id_field");
    const tempInput = document.createElement("input");
    tempInput.value = upiField.textContent;
    document.body.appendChild(tempInput);
    tempInput.select();
    document.execCommand("copy");
    document.body.removeChild(tempInput);
    alert("Nomor rekening BRI disalin: " + upiField.textContent);
}

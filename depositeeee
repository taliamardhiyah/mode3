<script>
function copyUPIJago() {
    const upiField = document.getElementById("upi_id_jago");
    const tempInput = document.createElement("input");
    tempInput.value = upiField.textContent;
    document.body.appendChild(tempInput);
    tempInput.select();
    document.execCommand("copy");
    document.body.removeChild(tempInput);
    alert("Nomor rekening JAGO disalin: " + upiField.textContent);
}
</script>

